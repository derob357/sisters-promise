# Square API Configuration for Sisters Promise
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to git - it contains sensitive data!

# Get these from: https://squareup.com/dashboard → Developer → Applications
SQUARE_APPLICATION_ID=temp_app_id_placeholder
SQUARE_ACCESS_TOKEN=temp_access_token_placeholder
SQUARE_LOCATION_ID=temp_location_id_placeholder

# Environment: 'sandbox' for testing, 'production' for real transactions
SQUARE_ENVIRONMENT=sandbox

# reCAPTCHA Configuration
# Get these from: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=temp_recaptcha_site_key_placeholder
RECAPTCHA_SECRET_KEY=temp_recaptcha_secret_key_placeholder

# Server Configuration
NODE_ENV=development
PORT=3000

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
